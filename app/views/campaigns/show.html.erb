<h1>Campaign: <%= @campaign.name %></h1>

<div class='table-main'>
  <div class="campaign-table">
    <ul class="left">
      <li class="title">Candidate</li>
      <% controller.duplicate_names(@valid_votes).each_key do |key| %> 
      <li><%= key.name %></li>
      <% end %>
    </ul>
    <ul>
      <li class="title">Score</li>
      <% controller.duplicate_names(@valid_votes).each_value do |value| %> 
      <li><%= value %></li>
      <% end %>
    </ul>
  </div>

  <div class="campaign-table">
    <ul class="right">
      <li class="title">Candidate</li>
      <% controller.duplicate_names(@invalid_votes).each_key do |key| %> 
      <li><%= key.name %></li>
      <% end %>
    </ul>
    <ul>
      <li class="title">Candidate</li>
      <% controller.duplicate_names(@invalid_votes).each_value do |value| %> 
      <li><%= value %></li>
      <% end %>
    </ul>
  </div>
</div>
